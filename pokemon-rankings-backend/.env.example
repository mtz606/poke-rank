# AWS DynamoDB Configuration
# For local development, use: http://localhost:8000
# For production, leave empty to use AWS DynamoDB service
AMAZON_DYNAMODB_ENDPOINT=http://localhost:8000
AMAZON_AWS_ACCESSKEY=your-access-key-here
AMAZON_AWS_SECRETKEY=your-secret-key-here
AMAZON_AWS_REGION=us-east-1

# Pokemon TCG API Configuration
# Get your API key from: https://dev.pokemontcg.io/
POKEMON_TCG_API_KEY=your-api-key-here
POKEMON_TCG_API_BASE_URL=https://api.pokemontcg.io/v2

# JWT Configuration
# Generate a secure random hex string (64+ characters recommended)
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=86400000

# CORS Configuration
# For local development
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174
# For production, update with your frontend URL:
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Logging Level (DEBUG for development, INFO for production)
LOG_LEVEL_COM_POKEMON=DEBUG
LOG_LEVEL_SPRING_SECURITY=DEBUG
LOG_LEVEL_SPRING_WEB=DEBUG
LOG_LEVEL_SPRING_VALIDATION=DEBUG
